<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:paddingRight="0dp"
        android:shadowColor="@android:color/black" >

        <ToggleButton
            android:id="@+id/environment_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/toggle_drawable_layer_environment"
            android:onClick="displayEnvironmentMarkers" 
            android:textOff=""
            android:textOn=""/>

        <ToggleButton
            android:id="@+id/art_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            android:background="@drawable/toggle_drawable_layer_art"
            android:onClick="displayArtMarkers" 
            android:textOff=""
            android:textOn=""/>

        <ToggleButton
            android:id="@+id/events_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            android:background="@drawable/toggle_drawable_layer_events"
            android:onClick="displayEventsMarkers" 
            android:textOff=""
            android:textOn=""/>

        <ToggleButton
            android:id="@+id/food_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            android:background="@drawable/toggle_drawable_layer_food"
            android:onClick="displayFoodMarkers" 
            android:textOff=""
            android:textOn=""/>

        <ToggleButton
            android:id="@+id/kids_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            android:background="@drawable/toggle_drawable_layer_kids"
            android:onClick="displayKidsMarkers"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>

</RelativeLayout>